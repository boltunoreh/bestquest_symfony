                <div class="l-footer__inner">
                    <nav class="l-footer__nav">
                        <dl class="l-footer__menu">
                            <dt class="title">Best Quest</dt>
                            <dd class="item"><a href="{{ path('app__about') }}#team">Команда</a></dd>
                            <dd class="item"><a href="{{ path('app__about') }}#clients">Клиенты</a></dd>
                        </dl>
                        <dl class="l-footer__menu">
                            <dt class="title">Проекты</dt>
                            {% for category in categories%}
                                <dd class="item"><a href="{{ path('app__homepage') }}?{{ category.slug }}">{{ category.title }}</a></dd>
                            {% endfor %}
                        </dl>
                        <dl class="l-footer__menu" id="contacts">
                            <dt class="title">Контакты</dt>
                            <dd class="item">
                                <a href="tel:+78125746512">+7 (812) 574 65 12</a>
                            </dd>

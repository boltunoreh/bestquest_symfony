        {% block header %}
            <header class="l-header">
                <div class="l-header__inner">
                    {% block header_logo %}
                        <a class="logo-wrapper small" href="/" id="logotype">
                            <h1 class="logotype">
                                <span class="active"
                                      style="display: inline-block; position: relative; opacity: 1; transform: translate(0px, 0px);">Best Quest</span>
                                <span class=""
                                      style="position: relative; opacity: 1; display: none; transform: translate(0px, 0px);">Настоящие Игры</span>
                            </h1>
                        </a>
                    {% endblock %}
                    <nav class="l-header__nav">
                        {% set menuItem = knp_menu_get('AppBundle:Builder:mainMenu') %}
                        {{ knp_menu_render(menuItem) }}
                    </nav>
                    <div class="l-header__actions">
                        {% block apply %}
                        {% endblock %}
                        <div class="phone"><a href="tel:+78125746512">+7 (812) 574 65 12</a></div>
                        <div class="phone"><a href="tel:+79219763876">+7 (921) 976 38 76</a></div>
                        <div class="l-header__email"><a href="mailto:info@best-quest.ru">info@best-quest.ru</a></div>
                        <div class="social">
                            <a class="yt" href="https://www.youtube.com/channel/UCFYNEDiE5zWuEaYBXI00_iA/videos?view_as=subscriber" target="_blank">
                                <img src="{{ asset("img/icons/youtube.png") }}" width="20">
                            </a>
                            <a class="instagram" href="https://www.instagram.com/bqspb.ru/" target="_blank">
                                <img src="{{ asset("img/icons/instagram.png") }}" width="20">
                            </a>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}

        {% block content %}

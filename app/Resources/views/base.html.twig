{% block header %}
    <header class="l-header">
        <div class="l-header__inner {% block header_div_additional_class %}{% endblock %}">
            {% block header_logo %}
                <a class="logo-wrapper logo-wrapper--small unvisible" href="{{ path('app__homepage') }}" id="logotype" style="opacity: 1;">
                    <img src="{{ asset('img/small-logo.svg') }}" alt="логотип" width="48" height="48">
                </a>
            {% endblock %}
            <nav class="l-header__nav">
                {% set mainMenu = knp_menu_get('AppBundle:Builder:mainMenu') %}
                {{ knp_menu_render(mainMenu) }}
            </nav>
            <div class="l-header__actions">
                <div class='order'>
                    {% if current_project is defined %}
                        <a href='{{ path('app__order', {'slug': current_project.slug }) }}'>Заявка</a>
                    {% else %}
                        <a href='{{ path('app__order') }}'>Заявка</a>
                    {% endif %}
                </div>
                <div class="phone"><a href="tel:+78125746512">+7 (812) 574 65 12</a></div>
                <div class="phone"><a href="tel:+79219763876">+7 (921) 976 38 76</a></div>
                <div class="l-header__email"><a href="mailto:info@best-quest.ru">info@best-quest.ru</a></div>
                <div class="social">
                    <a class="yt"
                       href="https://www.youtube.com/channel/UCFYNEDiE5zWuEaYBXI00_iA/videos?view_as=subscriber"
                       target="_blank">
                        <svg width="40" height="40" viewBox="0 0 40 40">
                            <use xlink:href="{{ asset('img/youtube.svg') }}#youtube"></use>
                        </svg>
                    </a>
                    <a class="instagram" href="https://www.instagram.com/bqspb.ru/" target="_blank">
                        <svg width="40" height="40" viewBox="0 0 40 40">
                            <use xlink:href="{{ asset('img/instagram.svg') }}#instagram"></use>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

